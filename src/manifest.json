{
    "name": "EasyTooltips",
    "description": "Helps user to interact with web page",
    "version": "0.1",
    "manifest_version": 3,
    "icons": {
        "32": "/icons/icon32.png",
        "64": "/icons/icon64.png",
        "128": "/icons/icon128.png"
    },
    "action": {
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "scripting",
        "runtime",
        "cookies",
        "http://*/*",
        "https://*/*"
    ],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "run_at": "document_end",
            "js": [
                "lib/shepherd.min.js",
                "scripts/content-script.js"
            ]
        }
    ],
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": ["css/shepherd.css"],
            "matches": ["<all_urls>"]
        }
    ]
}